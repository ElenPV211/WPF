<UserControl x:Class="CastomTextControls.View.ClearableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CastomTextControls.View"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
		<TextBox Name="txtInput" FontSize="16" 
				 Height="40" Width="250" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
				 Background="Transparent" TextChanged="txtInput_TextChanged" 
				 />
		<TextBlock Name="tbPlaceholder" Text="Введите Ваше имя" FontSize="16" 
				   Foreground="DarkGray" VerticalAlignment="Center" HorizontalAlignment="Center"
				   Margin="5,0,0,0"  Panel.ZIndex="-1"/>
		<Button Name="btnClear" Content="x" Width="30" Height="40" HorizontalAlignment="Right"
				BorderThickness="0" Click="btnClear_Click"/>
	</Grid>
</UserControl>
